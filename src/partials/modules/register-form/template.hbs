<form class="form form_type_register">
    <div class="form__top-content">
        <h1 class="form__heading">Регистрация</h1>
        {{{ FormInputGroup 
            type="email" id="email" name="email" 
            ref="emailInputGroup"
            placeholder="Почта" 
            cssModificator="form__input-group"
            validationType="email" }}}
        {{{ FormInputGroup 
            type="text" id="login" name="login" 
            ref="loginInputGroup"
            placeholder="Логин" 
            cssModificator="form__input-group"
            validationType="login" }}}
        {{{ FormInputGroup 
            type="text" id="firstName" name="first_name" 
            ref="nameInputGroup"
            placeholder="Имя" 
            cssModificator="form__input-group" 
            validationType="name" }}}
        {{{ FormInputGroup 
            type="text" id="secondName" name="second_name" 
            ref="secondNameInputGroup"
            placeholder="Фамилия" 
            cssModificator="form__input-group"
            validationType="name" }}}
        {{{ FormInputGroup 
            type="tel" id="phone" name="phone" 
            ref="phoneInputGroup"
            placeholder="Телефон" 
            cssModificator="form__input-group" 
            validationType="phone" }}}
        {{{ FormInputGroup 
            type="password" name="password" name="password" 
            ref="passwordInputGroup"
            placeholder="Пароль" 
            cssModificator="form__input-group"
            validationType="password" }}}
        {{{ FormInputGroup 
            type="password" name="password_repeat" 
            ref="passwordRepeatInputGroup"
            placeholder="Пароль (ещё раз)" 
            cssModificator="form__input-group"
            validationType="password-repeat" }}}
    </div>
    <div class="form__bottom-content">
        <div class="form__button-wrapper">
            {{{ Button heading="Зарегистрироваться" }}}
        </div>
        {{{ Link class="form__link" linkText="Войти" href="#" }}}
    </div>
</form>
